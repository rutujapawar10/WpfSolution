<Window x:Class="WpfDemoApp.Layouts.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp.Layouts"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Border BorderBrush="Red" BorderThickness="1">
        <Canvas>
            <TextBlock Canvas.Left="30" Canvas.Top="50">User ID</TextBlock>
            <Border Canvas.Left="100" Canvas.Top="50" BorderBrush="Black" BorderThickness="1">
                <TextBox  Width="100"></TextBox>
            </Border>
            <TextBlock Canvas.Left="30" Canvas.Top="90">Password</TextBlock>
            <Border Canvas.Left="100" Canvas.Top="90" BorderBrush="Black" BorderThickness="1">
                <TextBox Width="100"></TextBox>
            </Border>
            <Button Canvas.Left="50" Canvas.Top="140" >Login</Button>
            <Button Canvas.Left="100" Canvas.Top="140">Cancel</Button>
        </Canvas>
    </Border>
</Window>
