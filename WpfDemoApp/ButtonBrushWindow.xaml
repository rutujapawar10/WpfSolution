<Window x:Class="WpfDemoApp.ButtonBrushWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp"
        mc:Ignorable="d"
        Title="ButtonBrushWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="1st" Height="45" Background="{StaticResource B1 }"></Button>
        <Button Grid.Row="1" Content="2st" Height="45" Background="{StaticResource B2 }"></Button>
        <Button Grid.Row="2" Content="3rd" Height="45" ></Button>
    </Grid>
</Window>
